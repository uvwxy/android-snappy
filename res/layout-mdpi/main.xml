<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="fill_parent" android:id="@+id/LinearLayout01"
	android:layout_height="fill_parent" android:orientation="vertical"
	android:keepScreenOn="true" android:gravity="center_horizontal">
	<RelativeLayout android:layout_width="fill_parent"
		android:layout_height="wrap_content" android:id="@+id/RelativeLayout02">
		<EditText android:layout_width="wrap_content"
			android:layout_alignParentRight="true" android:id="@+id/etSeconds"
			android:text="30" android:gravity="center_vertical|center_horizontal"
			android:layout_height="wrap_content"></EditText>
		<TextView android:layout_width="wrap_content" android:id="@+id/TextView01"
			android:text="Intervall in seconds:" android:layout_height="wrap_content"
			android:layout_alignParentLeft="true"></TextView>
		<TextView android:layout_width="wrap_content"
			android:layout_below="@+id/TextView01" android:layout_height="wrap_content"
			android:layout_alignLeft="@+id/TextView01" android:text="Info:"
			android:id="@+id/tvInfo"></TextView>

	</RelativeLayout>







	<RelativeLayout android:layout_width="fill_parent"
		android:layout_height="wrap_content" android:id="@+id/RelativeLayout03">
		


		
		
		<SurfaceView android:id="@+id/svMyCameraPreview"
			android:layout_alignParentRight="true" android:layout_width="320px"
			android:layout_height="240px"></SurfaceView>








		

	
<Button android:layout_width="wrap_content" android:id="@+id/btnStop" android:layout_height="wrap_content" android:text="Stop" android:layout_toLeftOf="@+id/svMyCameraPreview" android:layout_alignBottom="@+id/svMyCameraPreview"></Button><Button android:layout_width="wrap_content" android:id="@+id/btnStart" android:layout_height="wrap_content" android:text="Run" android:layout_toLeftOf="@+id/svMyCameraPreview" android:layout_alignTop="@+id/svMyCameraPreview"></Button>




<CheckBox android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Preview" android:id="@+id/cbPreview" android:layout_alignParentTop="true"></CheckBox>
<RadioGroup android:layout_width="wrap_content" android:id="@+id/rdbgFocus" android:layout_height="wrap_content" android:layout_below="@+id/cbPreview" android:layout_alignLeft="@+id/cbPreview" android:layout_alignRight="@+id/cbPreview"><RadioButton android:id="@+id/rdbAuto" android:layout_width="fill_parent" android:text="Auto" android:layout_height="wrap_content"></RadioButton>
<RadioButton android:id="@+id/rdbInfinity" android:layout_width="fill_parent" android:text="Infinity" android:layout_height="wrap_content"></RadioButton>
<RadioButton android:id="@+id/rdbMacro" android:layout_width="fill_parent" android:text="Macro" android:layout_height="wrap_content"></RadioButton>
</RadioGroup>










</RelativeLayout>






</LinearLayout>
